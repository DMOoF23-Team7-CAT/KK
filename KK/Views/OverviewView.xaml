<UserControl x:Class="KK.Views.OverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KK.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <CollectionViewSource x:Key="CustomersView" Source="{Binding Customers}" />
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Style="{StaticResource BorderGradientStyle}"/>

            <!--Search Box-->

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0,0,0"  >
                <Rectangle StrokeThickness="1"/>
                <TextBlock x:Name="tl_Search" Text="Søg" VerticalAlignment="Center"  FontSize="15" Foreground="White" Margin="0,0,10,0">
                </TextBlock>
                <TextBox Margin="0,0,10,0" BorderThickness="1" FontSize="15" Background="Transparent" Padding="5" Width="200" HorizontalAlignment="Right" Height="30" Foreground="White" Text="" x:Name="tb_SearchBox"  TextChanged="tb_SearchBox_TextChanged"    >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <Border Grid.Column="0" Margin="10" Style="{StaticResource BorderGradientStyle}" CornerRadius="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView 
                        x:Name="lv_Overview" Height="570" HorizontalAlignment="center" ItemsSource="{Binding Source={StaticResource CustomersView}}" SelectionChanged="lv_Overview_SelectionChanged"  >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Id" Width="40" DisplayMemberBinding="{Binding Id}" />
                                    <GridViewColumn Header="Navn" Width="80" DisplayMemberBinding="{Binding Name}" />
                                    <GridViewColumn Header="Telefon" Width="100" DisplayMemberBinding="{Binding Phone}" />
                                    <GridViewColumn Header="Email" Width="150" DisplayMemberBinding="{Binding Email}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Column="1" Style="{StaticResource BorderGradientStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <!-- Grid.Row 0 Customer details-->

                <StackPanel Grid.Row="0" >
                    <DockPanel>
                        <TextBlock Text="Kundeoplysninger" FontSize="15" Foreground="White" FontWeight="Bold" Margin="0,10,0,20" HorizontalAlignment="Center"/>
                    </DockPanel>
                    <DockPanel Margin="20,0,0,3">
                        <TextBlock Text="Navn" DockPanel.Dock="Left" FontSize="12" FontWeight="DemiBold" Foreground="White"/>
                        <TextBox x:Name="tb_Name" BorderThickness="0,0,0,1" Width="120" Margin="0,0,30,0" Foreground="White" HorizontalAlignment="Right" CaretBrush="LightGray" FontSize="12" BorderBrush="DarkGray" Text="{Binding SelectedCustomer.Name, Mode=TwoWay}"  Background="Transparent"/>
                    </DockPanel>
                    <DockPanel Margin="20,10,0,3">
                        <TextBlock Text="Fødselsdato" DockPanel.Dock="Left" FontSize="12" FontWeight="DemiBold" Foreground="White"/>
                        <TextBox x:Name="tb_DOB" Width="120" Margin="0,0,30,0" HorizontalAlignment="Right" Foreground="White" Text="{Binding SelectedCustomer.DateOfBirth, Mode=TwoWay, StringFormat=dd/mm/yyyy}" BorderThickness="0,0,0,1" CaretBrush="LightGray" FontSize="12" BorderBrush="DarkGray" Background="Transparent"/>
                    </DockPanel>
                    <DockPanel Margin="20,10,0,3">
                        <TextBlock Text="Telefonnummer" DockPanel.Dock="Left" Foreground="White" FontSize="12" FontWeight="DemiBold" />
                        <TextBox x:Name="tb_Phone" Width="120" Foreground="White" Margin="0,0,30,0" HorizontalAlignment="Right" Text="{Binding SelectedCustomer.Phone, Mode=TwoWay}" BorderThickness="0,0,0,1" CaretBrush="LightGray" FontSize="12" BorderBrush="DarkGray" Background="Transparent"/>
                    </DockPanel>
                    <DockPanel Margin="20,10,0,3">
                        <TextBlock Text="Email" DockPanel.Dock="Left" FontSize="12" FontWeight="DemiBold" Foreground="White"/>
                        <TextBox x:Name="tb_Email" Text="{Binding SelectedCustomer.Email, Mode=TwoWay}" Width="120" Margin="0,0,30,0" Foreground="White" HorizontalAlignment="Right" BorderThickness="0,0,0,1" CaretBrush="LightGray" FontSize="12" BorderBrush="DarkGray" Background="Transparent"/>
                    </DockPanel>
                    <DockPanel Margin="20,10,0,3">
                        <TextBlock Text="Kvalifikationer" Foreground="White" DockPanel.Dock="Left" FontSize="12" FontWeight="DemiBold"/>
                        <TextBox x:Name="tb_Qualification" Width="120" Text="{Binding SelectedCustomer.Qualification, Mode=TwoWay}" Foreground="White" Margin="0,0,30,0" HorizontalAlignment="Right" BorderThickness="0,0,0,1" CaretBrush="LightGray" FontSize="12" BorderBrush="DarkGray" Background="Transparent"/>
                    </DockPanel>
                    <DockPanel Margin="20,10,0,3">
                        <TextBlock Text="Fraskrivningserklæring signeret?" Foreground="White" DockPanel.Dock="Left" FontSize="12" FontWeight="DemiBold"/>
                        <DockPanel HorizontalAlignment="Center">
                            <ComboBox Width="50" ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer.HasSignedDisclaimer}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Text" Value="Nej" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedCustomer.HasSignedDisclaimer}" Value="True">
                                                            <Setter Property="Text" Value="Ja" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                        </DockPanel>
                    </DockPanel>
                </StackPanel>

                <Border BorderBrush="White" BorderThickness="0.5" Margin="0,0,0,-20"  VerticalAlignment="Bottom"/>

                <!-- Grid.Row 1 Membership details -->

                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <DockPanel>
                        <TextBlock Text="Medlemskabsoplysninger" FontSize="15" Foreground="White" FontWeight="Bold" Margin="0,20,0,20" HorizontalAlignment="Center"/>
                    </DockPanel>
                    <DockPanel Margin="20,10,0,3" >
                        <TextBlock Text="Medlemskabs Id" DockPanel.Dock="Left" FontSize="12" FontWeight="DemiBold" Foreground="White"/>
                        <TextBlock Text="{Binding SelectedCustomer.Membership.Id}" Margin="0,0,30,10" HorizontalAlignment="Center" FontSize="12" FontWeight="DemiBold" Foreground="White"/>
                    </DockPanel>
                    <DockPanel Margin="20,0,0,3">
                        <TextBlock Text="Startdato" DockPanel.Dock="Left" FontSize="12" FontWeight="DemiBold" Foreground="White"/>
                        <DatePicker x:Name="dp_StartDate"  HorizontalAlignment="Center" SelectedDate="{Binding SelectedCustomer.Membership.StartDate}"/>
                    </DockPanel>
                    <DockPanel Margin="20,10,-5,3">
                        <TextBlock Text="Slutdato" DockPanel.Dock="Left" FontSize="12" FontWeight="DemiBold" Foreground="White"/>
                        <DatePicker x:Name="dp_EndDate"  HorizontalAlignment="Center" SelectedDate="{Binding SelectedCustomer.Membership.EndDate}"/>
                    </DockPanel>
                    <DockPanel Margin="20,10,0,3">
                        <TextBlock Text="Medlemskab status" Foreground="White" DockPanel.Dock="Left" FontSize="12" FontWeight="DemiBold"/>
                        <TextBlock Margin="0,0,30,10" HorizontalAlignment="Center" FontSize="12" FontWeight="DemiBold" Foreground="White">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Text" Value="Inaktiv" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedCustomer.Membership.IsActive}" Value="True">
                                            <Setter Property="Text" Value="Aktiv" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                    </DockPanel>
                </StackPanel>

                <!-- Grid.Row 2 Buttons for Update and Delete -->

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Height="40">
                    <Button x:Name="bt_Update" BorderThickness="0" Content="Opdater" Foreground="White"
                            FontSize="12" FontFamily="Montserrat" FontWeight="Bold" Cursor="Hand" Margin="0,0,10,0" Click="bt_Update_Click" >
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462AD8" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="100" Height="30" CornerRadius="10"                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"                                              HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="bt_Delete" BorderThickness="0" Content="Slet" Foreground="White"
                            FontSize="12" FontFamily="Montserrat" FontWeight="Bold" Cursor="Hand" Margin="0,0,0,0" Click="bt_Delete_Click" >
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#ffcd5c5c" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#ffdc143c"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="100" Height="30" CornerRadius="10"                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"                                              HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>


        <!--Grid.Column 2 Entries-->


        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource BorderGradientStyle}"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Indtjekninger" FontSize="15" Foreground="White" FontWeight="Bold"  HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Border Grid.Column="2" Style="{StaticResource BorderGradientStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView x:Name="lv_ChekIn" Height="570" HorizontalAlignment="center" ItemsSource="{Binding SelectedCustomer.Entries}" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Kunde Id" Width="60" DisplayMemberBinding="{Binding CustomerId}" />
                                    <GridViewColumn Header="Indtjekning" Width="150" DisplayMemberBinding="{Binding CheckInTime, StringFormat=dd/mm/yyyy HH:mm}" />
                                    <GridViewColumn Header="Pris" Width="60" DisplayMemberBinding="{Binding Price}" />
                                    <GridViewColumn Header="Id" Width="40" DisplayMemberBinding="{Binding Id}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Border>
            </StackPanel>

        </Grid>



    </Grid>
</UserControl>
