                <!--  Row 3  -->
                <Grid
                    Grid.Row="3"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Width="200"
                        Margin="0"
                        HorizontalAlignment="Right"
                        Style="{StaticResource gr_CustomerDetailsHeadersGrid}">
                        <TextBlock
                            Width="170"
                            HorizontalAlignment="Right"
                            Foreground="Black"
                            Style="{StaticResource tk_CustomerDetailsTextBlocks}"
                            Text="Total" />
                        <TextBox
                            x:Name="tb_Total"
                            Foreground="Black"
                            IsReadOnly="True"
                            Style="{StaticResource tb_TextBoxInput}"
                            TextAlignment="Right" />
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button
                            x:Name="bt_Cancel"
                            Width="140"
                            Margin="0,0,20,0"
                            Click="bt_Cancel_Click"
                            Style="{StaticResource vt_RedThemedButton}">
                            <TextBlock Text="Fortryd" />
                        </Button>
                        <Button
                            x:Name="bt_pay"
                            Width="200"
                            Margin="0,0,0,0"
                            Click="bt_pay_Click"
                            Style="{StaticResource bt_AddButton}">
                            <TextBlock Text="Bekræft Betaling" />
                        </Button>
                    </StackPanel>

                </Grid>


            </Grid>

        </Border>


        <!--  GridColumn 2  -->
        <Border Grid.Column="2" Style="{StaticResource BorderGradientStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="80" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Row 0  -->
                <StackPanel Margin="20" HorizontalAlignment="Right">
                    <Button
                        x:Name="bt_NewCustomer"
                        Width="180"
                        Margin="0,0"
                        Click="bt_NewCustomer_Click"
                        Style="{StaticResource bt_DarkThemedButton}">
                        <TextBlock Text="Ny Kunde" />
                    </Button>
                </StackPanel>


                <!--  Row 1  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <!--  Search Box  -->
                    <Grid
                        Grid.Row="1"
                        Width="180"
                        Height="50"
                        HorizontalAlignment="Center"
                        Style="{StaticResource gr_CustomerDetailsHeadersGrid}">
                        <TextBlock
                            Width="170"
                            Margin="0"
                            HorizontalAlignment="Right"
                            Style="{StaticResource tk_CustomerDetailsTextBlocks}"
                            Text="Søg på kunde navn"
                            Visibility="{Binding ElementName=tb_SearchBox, Path=Text, Converter={StaticResource TextToVisibilityConverter}}" />
                        <TextBox
                            x:Name="tb_SearchBox"
                            Margin="0"
                            Foreground="Black"
                            Style="{StaticResource tb_TextBoxInput}"
                            TextChanged="tb_SearchBox_TextChanged" />
                    </Grid>
                    <!--  Cheeack In Button  -->
                    <Button
                        x:Name="bt_CheckMemberIn"
                        Width="180"
                        Margin="0,0,10,0"
                        Click="bt_CheckMemberIn_Click"
                        Style="{StaticResource bt_AddButton}">
                        <TextBlock Margin="0" Text="Check Ind" />
                    </Button>
                </StackPanel>



                <!--  Customer ListView  -->
                <StackPanel Grid.Row="2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView
                            x:Name="lv_Customers"
                            Height="480"
                            HorizontalAlignment="center"
                            ItemsSource="{Binding Customers, Mode=TwoWay}"
                            SelectionChanged="lv_Customers_SelectionChanged">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn
                                        Width="40"
                                        DisplayMemberBinding="{Binding Id}"
                                        Header="Id" />
                                    <GridViewColumn
                                        Width="120"
                                        DisplayMemberBinding="{Binding Name}"
                                        Header="Navn" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Phone}"
                                        Header="Telefon" />
                                    <GridViewColumn
                                        Width="70"
                                        DisplayMemberBinding="{Binding Membership.Id}"
                                        Header="Medlems Id" />
                                    <GridViewColumn Width="50" Header="Aktiv">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox BorderThickness="0" IsChecked="{Binding Membership.IsActive}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>

            </Grid>
        </Border>

    </Grid>
</UserControl>
