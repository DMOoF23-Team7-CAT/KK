<UserControl
    x:Class="KK.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="clr-namespace:KK.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KK.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="704"
    d:DesignWidth="1346"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <ViewModel:StartViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource BorderGradientStyle}" />

        <Border Grid.Column="1" Style="{StaticResource BorderGradientStyle}">
            <TextBox
                x:Name="tb_SelectedCustomerName"
                Width="200"
                Height="30"
                Text="{Binding SelectedMembership.Id, Mode=TwoWay}" />
        </Border>

        <Border Grid.Column="2" Style="{StaticResource BorderGradientStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="80" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  CheckIn Button  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <Button
                        Margin="0,0,10,0"
                        Click="bt_CheckIn_Click"
                        Style="{StaticResource bt_AddButton}">
                        <TextBlock Text="Check Ind" />
                    </Button>
                </StackPanel>

                <!--  Search Box  -->
                <Grid
                    Grid.Row="1"
                    Width="250"
                    Margin="20,0"
                    HorizontalAlignment="Center"
                    Style="{StaticResource gr_CustomerDetailsHeadersGrid}">
                    <TextBlock
                        Width="170"
                        HorizontalAlignment="Right"
                        Style="{StaticResource tk_CustomerDetailsTextBlocks}"
                        Text="Søg på kunde navn"
                        Visibility="{Binding ElementName=tb_SearchBox, Path=Text, Converter={StaticResource TextToVisibilityConverter}}" />
                    <TextBox
                        x:Name="tb_SearchBox"
                        Foreground="Black"
                        Style="{StaticResource tb_TextBoxInput}"
                        TextChanged="tb_SearchBox_TextChanged" />
                </Grid>

                <!--  Customer ListView  -->
                <StackPanel Grid.Row="2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView
                            x:Name="lv_Overview"
                            Height="500"
                            HorizontalAlignment="center"
                            ItemsSource="{Binding Customers}"
                            SelectionChanged="lv_Overview_SelectionChanged">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn
                                        Width="40"
                                        DisplayMemberBinding="{Binding Id}"
                                        Header="Id" />
                                    <GridViewColumn
                                        Width="130"
                                        DisplayMemberBinding="{Binding Name}"
                                        Header="Navn" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Phone}"
                                        Header="Telefon" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Email}"
                                        Header="Email" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>

            </Grid>
        </Border>

    </Grid>
</UserControl>
